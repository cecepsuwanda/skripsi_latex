% Setting margin
\usepackage[top=3cm,bottom=2.5cm,left=4cm,right=2.5cm]{geometry}

\usepackage{mathptmx}

% Judul bahasa Indonesia
\usepackage[utf8]{inputenc}
\usepackage[bahasa]{babel}
\usepackage{csquotes}
\DeclareQuoteStyle{bahasa}{``}{''}{`}{'}  % gaya kutip untuk bahasa Indonesia

% Format citation
\usepackage[backend=bibtex,citestyle=authoryear,language=english]{biblatex}
